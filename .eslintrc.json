{
  "extends": "standard",
  "parser": "babel-eslint",
  "rules": {
    "yoda": 0,
    "semi": [2, "always"],
    "spaced-comment": ["error", "always", { "markers": ["/"] }],
    "no-extra-semi": 2,
    "semi-spacing": [2, { "before": false, "after": true }],
    "no-shadow": [2, {"builtinGlobals": true, "hoist": "functions"}]
  },
  "globals": {
    "frampton": true,
    "mediaConfig": true
  }
}
